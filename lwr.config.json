{
    "lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
    "routes": [
        {
            "id": "home",
            "path": "/",
            "layoutTemplate": "$layoutsDir/main.html",
            "rootComponent": "pages/home",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "about",
            "path": "/about",
            "layoutTemplate": "$layoutsDir/main.html",
            "rootComponent": "pages/about",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "contact",
            "path": "/contact",
            "layoutTemplate": "$layoutsDir/main.html",
            "rootComponent": "pages/contact",
            "bootstrap": {
                "syntheticShadow": true
            }
        },
        {
            "id": "projects",
            "path": "/projects",
            "layoutTemplate": "$layoutsDir/main.html",
            "rootComponent": "pages/projects",
            "bootstrap": {
                "syntheticShadow": true
            }
        }
    ],
    "assets": [
        {
            "alias": "assetsDir",
            "dir": "$rootDir/src/assets",
            "urlPath": "/public/assets"
        },
        {
            "alias": "favicon",
            "file": "$rootDir/src/assets/favicon.ico",
            "urlPath": "/favicon.ico"
        }
    ]
}
